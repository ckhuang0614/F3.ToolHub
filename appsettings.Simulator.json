{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/sim-toolhub-.log",
          "rollingInterval": "Day",
          "shared": true,
          "outputTemplate": "{Timestamp:O} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "F3.ToolHub"
    }
  },
  "ApiSecurity": {
    "HeaderName": "X-Api-Key",
    "ApiKeys": [
      {
        "Name": "sim-default",
        "Key": "f3",
        "Roles": [ "tools.read", "tools.execute" ]
      }
    ]
  },
  "Modbus": {
    "Host": "localhost",
    "Port": 1502,
    "SlaveId": 1,
    "ConnectTimeoutSeconds": 3,
    "ResponseTimeoutSeconds": 3,
    "Actions": [
      {
        "Name": "demo-holding-registers",
        "Description": "Reads four demo registers exposed by the simulator.",
        "StartAddress": 0,
        "NumberOfPoints": 4,
        "Registers": [
          {
            "Name": "demo.temperature",
            "Offset": 0,
            "DataType": "UInt16",
            "Scale": 0.1,
            "Unit": "C"
          },
          {
            "Name": "demo.humidity",
            "Offset": 1,
            "DataType": "UInt16",
            "Scale": 0.1,
            "Unit": "%"
          },
          {
            "Name": "demo.totalEnergy",
            "Offset": 2,
            "DataType": "UInt32",
            "Scale": 1.0,
            "Unit": "Wh"
          }
        ]
      }
    ],
    "Polling": {
      "Enabled": true,
      "ActionName": "demo-holding-registers",
      "IntervalSeconds": 2
    },
    "Resilience": {
      "MaxRetryAttempts": 5,
      "BaseDelayMilliseconds": 200,
      "MaxDelayMilliseconds": 2000,
      "CircuitBreakerFailureThreshold": 5,
      "CircuitBreakerDurationSeconds": 10,
      "ConnectionPoolSize": 4
    },
    "Output": {
      "File": {
        "Enabled": true,
        "Path": "data/sim-plc-history.jsonl"
      },
      "Mqtt": {
        "Enabled": true,
        "Host": "localhost",
        "Port": 1883,
        "Topic": "plc/simulator"
      }
    },
    "Monitoring": {
      "AlertWebhooks": [
        {
          "Enabled": false,
          "Name": "simulator-webhook",
          "Url": "https://hooks.sim.local/api/alert",
          "SecretHeaderName": "X-Alert-Secret",
          "Secret": ""
        }
      ]
    }
  }
}
